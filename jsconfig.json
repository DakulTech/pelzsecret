{
    "compilerOptions": {
        "baseUrl": "./backend",
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "checkJs": true,
        "jsx": "preserve",
        "outDir": "./dist",
        "strict": false,
        "skipLibCheck": true,
    },
    "include": ["backend/src/**/*", "backend/index.js", "backend/scripts.js"],
    "exclude": ["node_modules", "**/node_modules/*"]
}